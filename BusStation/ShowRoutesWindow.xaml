<Window x:Class="BusStation.ShowRoutesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BusStation"
        mc:Ignorable="d"
        Title="ShowRoutesWindow" Height="320.757" Width="649.608">
    <Grid>
        <DataGrid x:Name="RoutesDataGrid" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№ маршрута" Binding="{Binding Path=full_name}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="№ автобуса"  Binding="{Binding Path=status}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Время отправления"  Binding="{Binding Path=post}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Место отправления"  Binding="{Binding Path=department}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Место прибытия" Binding="{Binding Path=employee_date}" Width="*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
