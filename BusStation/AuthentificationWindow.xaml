        xmlns:local="clr-namespace:BusStation"
        mc:Ignorable="d"
        Title="Информационная система автовокзала" Height="351.305" Width="462.794">
    <Grid>
        <GroupBox Header="Авторизация" Margin="110,91,0,0" Height="137" VerticalAlignment="Top" HorizontalAlignment="Left" Width="234">
